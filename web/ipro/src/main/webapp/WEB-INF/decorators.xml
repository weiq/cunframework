<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts/">
	<!-- 不需要过滤的请求 --> 
	<excludes>
		<pattern>/static/*</pattern>
		<pattern>/cxf/*</pattern>
		<pattern>/api/*</pattern>
		<pattern>/javasimon/*</pattern>
		
		<!-- 示例 -->
		<pattern>/demo/ajax/*</pattern>
		<pattern>/demo/notfound*</pattern>
		<pattern>/demo/locked*</pattern>
		<pattern>/demo/signin*</pattern>
		<pattern>/demo/signup*</pattern>
		
		<!-- ipro -->
		<pattern>/register*</pattern>
		<pattern>/login*</pattern>
	</excludes>
	<!-- 定义装饰器要过滤的页面 -->
	<decorator name="default" page="default.jsp">
		<pattern>/*</pattern>
	</decorator>
</decorators>
